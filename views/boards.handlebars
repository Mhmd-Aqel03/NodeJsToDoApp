<div class="row">
    <div class="col-6">
            <ul>
                {{#each boards}}
                <li>
                    <a href="/todo/{{this.name}}">{{this.name}}</a>
                </li>
                {{/each}}
            </ul>
        <form method="post" action="/users/createboard" id="myform" onsubmit="return validateForm()">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputPassword6" class="col-form-label">Add board:</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="inputPassword6" class="form-control" name="name"
                        aria-describedby="passwordHelpInline">
                </div>
                <div class="col-auto">
                    <span id="passwordHelpInline" class="form-text">
                        <input type="submit" class="btn btn-primary" value="Add Board">
                    </span>
                </div>
            </div>
        </form>

    </div>

    
<script>
    function validateForm() {
        let x = document.forms["myform"]["task"].value;
        if (x == "") {
            alert("must enter task");
            return false;
        }
    }
</script>